<UserControl x:Class="WPTalkingAdventures.FrotzControls.SaveSelection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <StackPanel x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <Button x:Name="btnDefaultSave" Content="Save Default" Click="btnDefaultSave_Click" />
        <TextBox x:Name="tbName" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
        <Button x:Name="btnSave" Content="Save" Click="btnSave_Click" Grid.Column="0" />
        <Button x:Name="btnCancel" Content="Cancel" Click="btnCancel_Click" Grid.Column="1" />
        </Grid>
    </StackPanel>
</UserControl>
